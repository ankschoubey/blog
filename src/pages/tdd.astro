---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps from '~/components/widgets/Steps.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';
import { getItemFromSlug, type SeriesItems } from '~/utils/customCode.ts/ankushUtils';

const metadata = {
  title: 'TDD',
};

const content: SeriesItems[] = [
  {
    title: 'Getting Started',
    subtitle: 'Understanding why you TDD and Testing are needed',
    posts: ['software-blog/testing'],
  },
  {
    title: 'TDD Level 1: Beginner',
    subtitle: 'Learning the basics of TDD',
    posts: ['software-blog/making-tdd-easy', 'method-when-should', 'tdd-backend-example', 'tdd/rest-api-example'],
  },
  {
    title: 'TDD Level 1: Intermediate',
    subtitle: 'Expanding our TDD scale by writing cleaner test and writing more tests',
    posts: [
      'software-blog/pre-save-data-validation',
      'software-blog/bluring-line-between-unit-integration-test',
      'test-data-factories',
      'software-blog/fluent-assertions',
      'software-blog/tdd-over-json',
      'v1/junit-bug-tracking',
    ],
  },
  {
    title: 'TDD Level 2.5: UI',
    subtitle: 'Making Testing on UI Easier',
    posts: ['tdd/planning-dom', 'tdd/page-object-model', 'tdd/simple-contract-test'],
  },
  {
    title: 'TDD Level 3: TDD With time',
    subtitle: 'How to continue with TDD practice with time',
    posts: ['software-blog/encounter-a-bug', 'current-tdd-approach'],
  },
  {
    title: 'TDD Level 3: Red Flags and Tools ðŸš©',
    subtitle: 'Tools',
    posts: ['software-blog/spring-boot-junit-faster'],
  },
  {
    title: 'TDD Level 4: Testing Everything++',
    subtitle: 'How to test everything and ensure the code is self sustainable and self-correcting',
    posts: ['software-blog/testing-design-patterns', 'v1/validate-configuration', 'software-blog/architecture-testing'],
  },
  {
    title: 'TDD Level 5: BDD',
    subtitle: 'Behavior Driven Development',
    posts: [
      'software-blog/gist-of-bdd',
      'software-blog/need-for-executable-specification',
      'software-blog/writing-better-specs',
      'v1/you-are-following-good-bdd-when',
      'software-blog/bdd-vs-tdd',
    ],
  },
  {
    title: 'Beyond TDD',
    subtitle: 'Supporting factors',
    posts: ['software-blog/promote-tdd-in-a-team', 'software-blog/after-tdd', 'software-blog/dev-workflow', 'software-blog/mutation-testing', 'software-blog/chaos-engineering'],
  },
];

const resolvedContent = await Promise.all(
  content.map(async (section) => {
    const blogpostsResolved = await Promise.all(
      section.posts.map(async (b, index) => await getItemFromSlug(b, index + 1))
    );
    section.items = blogpostsResolved;
    return section;
  })
);

const articleCount = content
  .map((section) => section.posts.length)
  .reduce((accumulator, currentValue) => {
    return accumulator + currentValue;
  }, 0);
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Ankush's Guide to"
    image={{
      src: '/images/tdd.png',
      alt: 'Caos Image',
      width: undefined,
      height: undefined,
    }}
  >
    <Fragment slot="title">
      Test Driven Development <br />
      <span class="text-accent dark:text-white highlight"> and Beyond</span>
    </Fragment>

    <Fragment slot="subtitle">
      Approaching <span class="text-accent font-bold">Test Driven Development</span> To Become a 5x Developer <br />
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Statistics about the series"
    stats={[
      { title: 'Sections', amount: content.length },
